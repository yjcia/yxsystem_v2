<!DOCTYPE html>
<html>
<head>
    <title></title>
    <%- include header.ejs %>
</head>
<body>
<%- include toolbar.ejs %>

<div class="container-fluid" style="margin-top: 80px">
    <div class="row">
        <!--<div class="col-md-2">-->
        <!--<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addChargeModal">Edit</button>-->
        <!--</div>-->
        <div class="col-md-12">
            <button type="button" class="btn btn-default" data-toggle="modal" data-target="#addChargeModal">Add Charge
            </button>
            <table id="chargeSettingTable" data-show-export="true"></table>
        </div>
    </div>
</div>
<div class="modal fade" id="editChargeModal" tabindex="-1" role="dialog" aria-labelledby="editChargeModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Edit</h4>
            </div>
            <div class="modal-body">
                <form id="chargeEditForm">
                    <input type="hidden" id="editId">
                    <div class="form-group">
                        <!--<label for="category">Category</label>-->

                        <div class="input-group" id="chargeCateDiv">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-list"></span>
                            </span>
                            <select id="cateSelect" class="form-control">
                                <option value="1">Food</option>
                                <option value="2">Traffic</option>
                                <option value="3">Telecome</option>
                                <option value="4">Electric</option>
                                <option value="5">Gas</option>
                                <option value="6">Others</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <!--<label for="amount">Amount</label>-->

                        <div class="input-group" id="chargeAmtDiv">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-usd"></span>
                            </span>
                            <input type="text" class="form-control" id="editAmount" name="amount" placeholder="Amount">

                        </div>
                    </div>
                    <div class="form-group">
                        <!--<label for="date">Date</label>-->

                        <div class="input-group date" id="chargeDateDiv">
                             <span class="input-group-addon">
                                <span class="glyphicon-calendar glyphicon"></span>
                            </span>
                            <input type="text" class="form-control" id="editDate" name="date"
                                   data-date-format="yyyy-mm-dd" placeholder="Date" disabled="true">

                        </div>
                    </div>
                    <div class="form-group">
                        <!--<label for="type">Type</label>-->

                        <div class="input-group" id="chargeTypeDiv">
                            <span class="input-group-addon">
                                <span class="glyphicon-list glyphicon"></span>
                            </span>
                            <select class="form-control" id="typeSelect">
                                <option value="0">rev</option>
                                <option value="1">cost</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <!--<label for="remark">Remark</label>-->

                        <div class="input-group" id="chargeRemarkDiv">

                            <span class="input-group-addon">
                                <span class="glyphicon-comment glyphicon"></span>
                            </span>
                            <input type="text" class="form-control" id="editRemark" name="remark" placeholder="Remark">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="saveChargeUpdate()">Save</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addChargeModal" tabindex="-1" role="dialog" aria-labelledby="addChargeModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">New</h4>
            </div>
            <div class="modal-body">
                <form id="chargeAddForm">
                    <div class="form-group">

                        <div class="input-group" id="chargeCateDiv">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-list"></span>
                            </span>
                            <select id="addCateSelect" class="form-control">
                                <option value="1">Food</option>
                                <option value="2">Traffic</option>
                                <option value="3">Telecome</option>
                                <option value="4">Electric</option>
                                <option value="5">Gas</option>
                                <option value="6">Others</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="input-group" id="chargeAmtDiv">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-usd"></span>
                            </span>
                            <input type="text" class="form-control" id="addAmount" name="amount" placeholder="Amount">

                        </div>
                    </div>
                    <div class="form-group">

                        <div class="input-group date" id="addChargeDateDiv">
                             <span class="input-group-addon">
                                <span class="glyphicon-calendar glyphicon"></span>
                            </span>
                            <input type="text" class="form-control" id="addDate" name="date"
                                   data-date-format="yyyy-mm-dd" placeholder="Date" disabled="true">

                        </div>
                    </div>
                    <div class="form-group">

                        <div class="input-group" id="chargeTypeDiv">
                            <span class="input-group-addon">
                                <span class="glyphicon-list glyphicon"></span>
                            </span>
                            <select class="form-control" id="addTypeSelect">
                                <option value="0">rev</option>
                                <option value="1">cost</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="input-group" id="chargeRemarkDiv">
                            <span class="input-group-addon">
                                <span class="glyphicon-comment glyphicon"></span>
                            </span>
                            <input type="text" class="form-control" id="addRemark" name="remark" placeholder="Remark">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="saveNewCharge()">Save</button>
            </div>
        </div>
    </div>
</div>
<%- include footer.ejs %>
</body>
</html>
