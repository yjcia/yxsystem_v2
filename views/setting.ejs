<!DOCTYPE html>
<html>
<head>
    <title></title>
    <%- include header.ejs %>
</head>
<body>
<%- include toolbar.ejs %>

<div class="container-fluid" style="margin-top: 80px">
    <div class="row">
        <div class="col-md-12">
            <table id="chargeSettingTable" data-show-export="true"></table>
        </div>
    </div>
</div>
<div class="modal fade" id="editChargeModal" tabindex="-1" role="dialog" aria-labelledby="editChargeModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Edit</h4>
            </div>
            <div class="modal-body">
                <form id="chargeEditForm">
                    <div class="form-group">
                        <label for="category">Category</label>

                        <div class="input-group" id="chargeCateDiv">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-list"></span>
                            </span>
                            <select class="form-control">
                                <option>Food</option>
                                <option>Traffic</option>
                                <option>Telecome</option>
                                <option>Electric</option>
                                <option>Gas</option>
                                <option>Others</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="amount">Amount</label>

                        <div class="input-group" id="chargeAmtDiv">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-usd"></span>
                            </span>
                            <input type="text" class="form-control" id="amount" name="amount" placeholder="Amount">

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="date">Date</label>

                        <div class="input-group date" id="chargeDateDiv">
                             <span class="input-group-addon">
                                <span class="glyphicon-calendar glyphicon"></span>
                            </span>
                            <input type="text" class="form-control" id="date" name="date"
                                   data-date-format="yyyy-mm-dd" placeholder="Date">

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="type">Type</label>

                        <div class="input-group" id="chargeTypeDiv">
                            <span class="input-group-addon">
                                <span class="glyphicon-list glyphicon"></span>
                            </span>
                            <select class="form-control">
                                <option>rev</option>
                                <option>cost</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="remark">Remark</label>

                        <div class="input-group" id="chargeRemarkDiv">
                            <span class="input-group-addon">
                                <span class="glyphicon-comment glyphicon"></span>
                            </span>
                            <input type="text" class="form-control" id="remark" name="remark" placeholder="Remark">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<%- include footer.ejs %>
</body>
</html>
